# EditorConfig for dotnet-agent-harness
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash}]
indent_style = space
indent_size = 2
binary_next_line = true
switch_case_indent = true

[*.{js,ts}]
indent_style = space
indent_size = 2
quote_type = single

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
