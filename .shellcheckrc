# ShellCheck configuration for bash scripts
# https://github.com/koalaman/shellcheck/wiki

# Enable all checks by default
enable=all

# Specific checks to disable
disable=SC1090  # Can't follow non-constant source
disable=SC1091  # Not following sourced file
disable=SC2034  # Variable appears unused (often used in sourced files)
disable=SC2155  # Declare and assign separately to avoid masking return values
disable=SC2164  # Use cd ... || exit in case cd fails

# Shell dialect
shell=bash

# Output format
format=tty

# Severity level (error, warning, info, style)
severity=warning

# Check sourced files
check-sourced=true

# External sources
external-sources=true

# Require [[ ]] for conditionals
enable=avoid-nullary-conditions

# Require exit codes
enable=check-unassigned-uppercase
