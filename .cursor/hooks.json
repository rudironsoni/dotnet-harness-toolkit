{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "command": ".rulesync/hooks/session-start-context.sh",
        "timeout": 10
      }
    ],
    "postToolUse": [
      {
        "matcher": "Write|Edit",
        "type": "command",
        "command": ".rulesync/hooks/post-edit-dotnet.sh",
        "async": true,
        "timeout": 60
      }
    ]
  }
}
